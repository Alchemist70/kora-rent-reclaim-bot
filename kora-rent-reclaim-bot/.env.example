# Environment Variables - Development
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# Solana RPC Endpoint
# For development: use public endpoint or Alchemy demo
# For production: use private endpoint (Helius, Triton, Alchemy, etc.)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Keypair Path
# Path to your Solana keypair JSON file
# For production: use absolute path to secure location
KEYPAIR_PATH=./keypair.json

# Treasury Address
# Where reclaimed SOL will be sent
# For development: any valid address you control
# For production: VERIFY 5+ TIMES before using
TREASURY_ADDRESS=11111111111111111111111111111111

# Telegram Bot Configuration (Optional)
# Leave empty to disable alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Data Directory
# Where indexed accounts and audit logs are stored
# For development: ./data (default)
# For production: /var/lib/bot-data (or your secure location)
DATA_DIR=./data

# Log Directory (Optional)
# For production log aggregation
LOG_DIR=./logs

# Log Level
# debug (verbose), info (normal), warn (important), error (critical)
LOG_LEVEL=debug

# Environment
# dev or prod
NODE_ENV=development

# Solana Cluster
# devnet, testnet-beta, mainnet-beta
SOLANA_CLUSTER=devnet

# Dry Run Mode
# true: analyze and log only (no transactions)
# false: execute real transactions (PRODUCTION ONLY)
DRY_RUN=true

# RPC Connection Settings
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Inactivity Threshold (slots)
# Time before account eligible for reclaim
# ~46 hours on devnet, ~2.5 days on mainnet
MIN_INACTIVITY_SLOTS=100000

# Dashboard Settings
DASHBOARD_ENABLED=true
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost

# Telegram Alert Thresholds
# Only alert if amount exceeds these values (SOL)
TELEGRAM_RECLAIM_THRESHOLD=0.1
TELEGRAM_IDLE_THRESHOLD=0.5
